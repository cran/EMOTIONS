Package: EMOTIONS
Type: Package
Title: 'EMOTIONS: Ensemble Models for Lactation Curves'
Version: 1.0
Authors@R: c(person(given = "Pablo",
           family = "Fonseca",
           role = c("aut", "cre"),
           email = "p.fonseca@csic.es"),person("Marcos", "Prates", email = "marcosop@gmail.com", role = "aut"), 
